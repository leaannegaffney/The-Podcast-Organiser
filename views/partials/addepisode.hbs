<form class="ui stacked segment form" action="/playlist/{{playlist.id}}/addepisode" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Episode</label>
      <input placeholder="Episode" type="text" name="episode" autofocus required>
    </div>
    <div class="field">
      <label>Duration</label>
      <input placeholder="Duration" type="text" name="duration" required>
    </div>
  </div>
  <button class="ui blue submit button">Add Episode</button>
</form>