{{#each playlists}}
  <section class="ui segment" id = "playlist">
    <h1 class="ui header">
      {{title}}
    </h1>
    <section class="ui container">
    <div class="ui grid">
      <div class="twelve wide column"><h3>Host: {{host}}</h3></div>
      <div class="four wide column"><h3>Genre: {{genre}}</h3></div>
  </div>
</section>    
    {{#if episodes}}
      <a href="/playlist/{{id}}" class="ui icon button"> <i class="folder open icon"></i> </a>
    {{/if}}
    <a href="/deletePlayList/{{id}}" class=" delplaylist ui icon button"><i class="trash icon"></i></a>
  </section>
{{/each}}