<div class="ui centered cards">  
{{#each playlists}}
    <div class="ui orange card">
      <div class = "content">
        <div class = "header"><a href="/playlist/{{id}}">{{title}}</a></div>
        <div class = "meta">
          <span class = "right floated genre"></span>
        </div>
      </div>
      <div class="ui centered image">
        <img src="{{picture}}" alt="{{title}}">
      </div>
      <div class="content">
        <p class="center aligned header"><a href="/playlist/{{id}}">{{title}}</a></p>
      <div>Host: {{host}}</div>
      <div class = "right floated">Genre: {{genre}}</div>
        
        <div class="center aligned">
      <a href="/deletePlayList/{{id}}" class=" delplaylist ui icon button"><i class="trash icon"></i></a>
      </div>
  {{/each}}
</div>


